<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.lenovo.recyclerviewexample.activity.MenuActivity">

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Contact Menu"
        android:layout_gravity="center"
        android:id="@+id/btnContactGenderMenu"
        />
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Notification View"
        android:layout_gravity="center"
        android:layout_marginTop="10dp"
        android:id="@+id/btnNotification"
        />
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Notification Link"
        android:layout_gravity="center"
        android:layout_marginTop="10dp"
        android:id="@+id/btnNotificationLink"
        />
</LinearLayout>
